desc "Runs tests on the primary platforms and configurations"
lane :test do
    verify(
        scheme: "FormValidatorSwift iOS",
        destination: "OS=10.0,name=iPhone 7 Plus",
        sdk: "iphonesimulator10.0"
    )
    verify(
        scheme: "FormValidatorSwift tvOS",
        destination: "OS=10.0,name=Apple TV 1080p",
        sdk: "appletvsimulator10.0"
    )
    verify_demo
    pod_lib_lint
    danger(
        github_api_token: ENV["GITHUB_API_TOKEN"],
        use_bundle_exec: true
    )
end

desc "Runs unit tests"
lane :verify do |options|
    scheme = options[:scheme]
    destination = options[:destination]
    sdk = options[:sdk]
    output_directory = "fastlane/test_output/" + scheme + "/"
    opts = {
        :workspace => 'FormValidatorSwift.xcworkspace',
        :scheme => scheme,
        :destination => destination,
        :sdk => sdk,
        :code_coverage => true,
        :xcargs => "ONLY_ACTIVE_ARCH=YES",
        :output_directory => output_directory,
        :clean => true
    }
    scan(opts)
    upload_cov
end

desc "Build demo app"
lane :verify_demo do
    scheme = "iOS Example"
    output_directory = "fastlane/test_output/" + scheme + "/"
    xcodebuild(
        workspace: "FormValidatorSwift.xcworkspace",
        scheme: scheme,
        destination: "OS=10.0,name=iPhone 7 Plus",
        sdk: "iphonesimulator10.0",
        xcargs: "ONLY_ACTIVE_ARCH=NO",
        output_directory: output_directory,
        clean: true,
        build: true
    )
end

desc "Upload code coverage reports (if running on CI)"
lane :upload_cov do
    if is_ci?
        sh "bash ./codecov.sh"
    else
        say "No need to upload code coverage. Not running from CI."
    end
end
